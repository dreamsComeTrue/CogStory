void Start ()
{
}

//--------------------------------------------------------------------------------------------------

void BeforeEnterScene ()
{    
    SetSuppressSceneInfo (true);
    IntroAnimation ();        
}

//--------------------------------------------------------------------------------------------------

void AfterLeaveScene ()
{
}

//--------------------------------------------------------------------------------------------------

void IntroAnimation ()
{   
    player.SetPreventInput (true);
    player.Hide ();
    
    CitySceneAnimation ();
    //  TODO: DEBUG
    SetActiveScene ("1_factory/1_factory_main.scn", false);
    FactoryMainSceneAnimation ();
}

//--------------------------------------------------------------------------------------------------

void CitySceneAnimation ()
{
    GetDummyActor ().SetPosition (GetFlagPoint ("INTRO_CAMERA_START").Pos);
    camera.SetFollowActor (GetDummyActor ());

    SetOverlayText ("-- Chapter I --\nNo ordinary day", 6000.f, 200.f, Center);    

    Timeline@ timeline = CreateTimeline ();

    timeline
    .Once (GetTime ('CitySceneAnimationTime'), function (id)
    {
        CreateCameraToFlagPointTween ("INTRO_CAMERA_END", 'CitySceneAnimationTime', function (id)
        {
            CityFactorySceneAnimation ();
        });
    });
}

//--------------------------------------------------------------------------------------------------

void CityFactorySceneAnimation ()
{
    SetActiveScene ("2_city/2_city_factory_district.scn", true, function () 
    {
        GetDummyActor ().SetPosition (GetFlagPoint ("INTRO_CAMERA_START").Pos);
        camera.SetFollowActor (GetDummyActor ());
        
        Timeline@ timeline = CreateTimeline ();

        timeline
        .Once (GetTime ('CityFactorySceneAnimationTime1'), function (id)
        {
            CreateCameraToFlagPointTween ("INTRO_CAMERA_A", 'CityFactorySceneAnimationTime1', null);
        })
        .Once (GetTime ('CityFactorySceneAnimationTime2'), function (id)
        {
            CreateCameraToFlagPointTween ("INTRO_CAMERA_END", 'CityFactorySceneAnimationTime2', function (id)
            {
                FactoryMainSceneAnimation ();
            });
        });           
    });
}

//--------------------------------------------------------------------------------------------------

void FactoryMainSceneAnimation ()
{
    SetActiveScene ("1_factory/1_factory_main.scn", true, function () 
    {
        GetDummyActor ().SetPosition (GetFlagPoint ("INTRO_CAMERA_START").Pos);
        camera.SetFollowActor (GetDummyActor ());
        
        Timeline@ timeline = CreateTimeline ();

        timeline
        .Once (GetTime ('FactoryMainSceneAnimation1'), function (id)
        {
            CreateCameraToFlagPointTween ("INTRO_CAMERA_A", 'FactoryMainSceneAnimation1', null);
        })
        .Once (GetTime ('FactoryMainSceneAnimation2'), function (id)
        {
            CreateCameraToFlagPointTween ("INTRO_CAMERA_END", 'FactoryMainSceneAnimation2', function (id)
            {
                camera.SetFollowActor (player);
                player.SetPreventInput (false);
                player.SetPosition (GetDummyActor ().GetPosition ());
                player.Show ();
            });
        });          
    });
}

